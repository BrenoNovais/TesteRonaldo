// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model tenant {
  id      Int     @id @default(autoincrement())
  nome    String
  cnpj    String  @unique @db.VarChar(14)
  users   Users[]
  backups bkps[]

  created_at     DateTime         @default(now())
  updated_at     DateTime         @updatedAt
  bancos         bancos[]
  diretorios_xml diretorios_xml[]
  horarios       horarios[]
}

model Users {
  id        Int     @id @default(autoincrement())
  id_tenant Int
  id_user   Int?
  nome      String
  email     String  @unique
  senha     String
  avatar    String? @default("public/avatarpadrao.jpg")
  tenant    tenant? @relation(fields: [id_tenant], references: [id])

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@unique([id, id_tenant])
  @@unique([id_user, id_tenant])
}

model bkps {
  id        Int     @id @default(autoincrement())
  id_tenant Int
  id_bkps   Int?
  nome      String
  tenant    tenant? @relation(fields: [id_tenant], references: [id])

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@unique([id, id_tenant])
  @@unique([id_bkps, id_tenant])
}

model bancos {
  id            Int              @id @default(autoincrement())
  id_tenant     Int
  id_banco      Int
  db_user       String
  db_password   String
  db_name       String
  qtde_dias_bkp Int
  diretorio_bkp String
  horarios      horarios[]
  diretorio_xml diretorios_xml[]

  tenant tenant? @relation(fields: [id_tenant], references: [id])
}

model diretorios_xml {
  id               Int     @id @default(autoincrement())
  id_tenant        Int
  id_diretorio_xml Int
  id_bancos        Int?
  diretorio_xml    String
  bancos           bancos? @relation(fields: [id_bancos], references: [id])
  tenant           tenant? @relation(fields: [id_tenant], references: [id])
}

model horarios {
  id         Int     @id @default(autoincrement())
  id_tenant  Int
  id_horario Int
  horario    Int
  bancos     bancos? @relation(fields: [id_bancos], references: [id])
  id_bancos  Int?

  tenant tenant? @relation(fields: [id_tenant], references: [id])
}
