// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model tenant {
  id      Int       @id @default(autoincrement())
  nome    String
  cnpj    String    @unique @db.VarChar(14)
  users   Users[]
  backups backups[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  bkps       bkps[]
}

model Users {
  id        Int     @id @default(autoincrement())
  id_tenant Int
  id_user   Int?
  nome      String
  email     String  @unique
  senha     String
  avatar    String? @default("public/avatarpadrao.jpg")
  tenant    tenant? @relation(fields: [id_tenant], references: [id])

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@unique([id, id_tenant])
  @@unique([id_user, id_tenant])
}

model backups {
  id        Int     @id @default(autoincrement())
  id_tenant Int
  id_backup Int?
  url       String
  tenant    tenant? @relation(fields: [id_tenant], references: [id])

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@unique([id, id_tenant])
  @@unique([id_backup, id_tenant])
}

model bkps {
  id             Int     @id @default(autoincrement())
  id_tenant      Int
  id_bkps        Int?
  nome           String
  db_user        String
  db_password    String
  db_name        String
  horarios_bkps  String
  realiza_backup Boolean

  tenant tenant? @relation(fields: [id_tenant], references: [id])

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@unique([id, id_tenant])
  @@unique([id_bkps, id_tenant])
}
