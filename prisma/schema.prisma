// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuarios {
  id   Int    @id @default(autoincrement())
  nome String
  email String @unique
  senha String 
  avatar String? @default("")
}

model Users {
  id     Int     @id @default(autoincrement())
  nome   String
  email  String  @unique
  senha  String
  avatar String? @default("public/avatarpadrao.jpg")
}

enum acao {
  incluir
  excluir
  alterar
}

model log {
  id             Int     @id @default(autoincrement())
  id_usuario     Int
  usuario        String
  administrador  Boolean
  acao           acao
  tabela         String
  id_modificacao Int

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
